<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".presentation.SignUpActivity">

    <LinearLayout
        android:id="@+id/signup_ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_margin="24dp"
        android:background="@drawable/grey_corner_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lightgray_border_corner_box"
            android:padding="4dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/signup_et_id"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="아이디를 입력하세요."
                android:paddingHorizontal="4dp"/>
            <TextView
                android:id="@+id/signup_tv_isdup"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:paddingLeft="4dp"
                android:text="아이디를 입력하세요."
                android:textSize="12dp"
                android:textColor="@android:color/holo_red_dark"/>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:layout_marginVertical="4dp"/>
            <EditText
                android:id="@+id/signup_et_password"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:hint="비밀번호를 입력하세요."
                android:paddingHorizontal="4dp"/>
            <TextView
                android:id="@+id/signup_tv_iscorrect"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:paddingLeft="4dp"
                android:text="비밀번호를 입력하세요."
                android:textSize="12dp"
                android:textColor="@android:color/holo_red_dark"/>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:layout_marginVertical="4dp"/>
            <EditText
                android:id="@+id/signup_et_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="이름을 입력하세요."
                android:paddingHorizontal="4dp"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_btn_signup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/green_corner_box"
            android:text="회원가입"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>